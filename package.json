{
  "name": "@retsam/ko-react",
  "version": "1.0.0-beta-1",
  "description": "React bindings for Knockout",
  "main": "dist/bundle.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c",
    "prelint": "echo 'Running linter...'",
    "prettier:check": "prettier . --config .prettierrc --check",
    "prettier:write": "prettier . --config .prettierrc --write",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --cache --max-warnings 0",
    "pretest": "echo 'Running tests...'",
    "test": "jest",
    "prepare": "npm run test && npm run build"
  },
  "author": "Retsam19",
  "license": "MIT",
  "dependencies": {
    "@types/knockout": "^3.4.63"
  },
  "devDependencies": {
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^22.2.3",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.22.0",
    "husky": "^1.3.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^29.0.0",
    "knockout": "3.x",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^0.58.2",
    "rollup-plugin-typescript2": "^0.13.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "knockout": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "repository": "github:Retsam/ko-react",
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm test"
    }
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.ts?(x)"
    ],
    "moduleDirectories": [
      "node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
