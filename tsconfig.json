{
    "compilerOptions": {
        "declaration": true,
        "noEmit": true,
        "module": "esnext",
        "target": "es2015",
        "sourceMap": true,
        "allowJs": false,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "rootDir": "src",
        "baseUrl": "src",
        // Technically makes all the jest globals in dev code (as far as types are concerned)
        // ... could separately configure type-checking for tests, but for now it's a small concern
        "types": ["jest"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "noUnusedLocals": true
    },
    "include": ["src"]
}
